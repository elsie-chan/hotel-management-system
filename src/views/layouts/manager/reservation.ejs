                    <li class="nav-item d-block d-xl-none">
                        <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                            <i class="ti ti-menu-2"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </header>
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center mb-3">
                        <a href="#" class="col-2 link-primary card-title fw-semibold card-link">Upcoming</a>

                    </div>
                    <div class="row">
                        <div class="col">
                            <% reservations.forEach(function(reservation) { %>
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Reservation Id: <%= reservation.id %></h5>
                                        <div class="row justify-content-between">
                                            <div class="col">
                                                <h6 class="card-subtitle fw-semibold">Check in:
                                                    <span
                                                            class="fw-light text-muted"><%= new Date(reservation.checkIn).toLocaleString() %></span>
                                                </h6>
                                            </div>
                                            <div class="col">
                                                <h6 class="card-subtitle fw-semibold">Check out: <span
                                                            class="fw-light text-muted"><%= new Date(reservation.checkOut).toLocaleString() %></span>
                                                </h6>
                                            </div>
                                            <div class="col">
                                                <h6 class="card-subtitle fw-semibold">Guests: <span
                                                            class="fw-light text-muted"><%= reservation.guests %></span>
                                                </h6>
                                            </div>
                                            <div class="col-1 text-end">
                                                <div class="d-flex align-items-center gap-2 cursor-pointer"
                                                     data-bs-toggle="dropdown">
