<script>
    $(document).ready(function () {
        $('.logout').click(function () {
            $.ajax({
                url: '/api/v1/auth/logout',
                type: 'GET',
                success: function (data) {
                    if (data.message == 'Logout success') {
                        window.location.href = '/manager/login';
                    }
                }
            });
        });

        $('.meal').on('click', function (e) {
            e.preventDefault();
            $(this).toggleClass('active');
        })
    });
</script>
